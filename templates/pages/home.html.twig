{% block title 'Agence Lorem Ipsum'%}

{% block body %}
<style>

    .example-wrapper {  width: 100%; font: 18px/1.5 sans-serif; background: silver;}
    .example-wrapper code { background: darkgray; padding: 2px 6px; }
</style>

<div class="example-wrapper" >
